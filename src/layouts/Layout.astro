---
import Footer from "../components/Footer.astro";
import NavBar from "../components/NavBar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body
    class="bg-gradient-to-r from-cyan-200 from-10% via-sky-200 via-30% to-blue-200 to-90% overflow-x-hidden"
  >
    <NavBar />
    <!-- <MenuItemContainerView>
      {menuItems.map((item) => <MenuItemView {...item} />)}
    </MenuItemContainerView> -->
    <slot />
    <Footer />
  </body>
</html>
